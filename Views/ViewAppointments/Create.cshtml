@model dynamic
@{
    ViewData["Title"] = "Book a Viewing";
    var room = ViewBag.Room as RentalService.Models.Room;
}
@if (room != null)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@room.Name</h5>
            <p class="card-text"><strong>Location:</strong> @room.Building?.Location</p>
            <p class="card-text"><strong>Price:</strong> @room.Price</p>
            <p class="card-text"><strong>Description:</strong> @room.Description</p>
        </div>
    </div>
}
<h2>Book a Viewing</h2>
<form asp-action="Create" method="post">
    <input type="hidden" name="roomId" value="@ViewBag.RoomId" />
    <div>
        <label>Appointment Time</label>
        <input type="datetime-local" name="appointmentTime" />
    </div>
    <button type="submit">Book</button>
</form>
<a href="@Url.Action("Index")">Back to list</a>
