@model dynamic
@{
    ViewData["Title"] = "Book a Viewing";
    var room = ViewBag.Room as RentalService.Models.Room;
}
@if (room != null)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@room.Name</h5>
            <p class="card-text"><strong>Location:</strong> @room.Building?.Location</p>
            <p class="card-text"><strong>Price:</strong> @room.Price</p>
            <p class="card-text"><strong>Description:</strong> @room.Description</p>
        </div>
    </div>
}
<div class="card shadow-sm mb-4" style="max-width: 500px; margin: 0 auto;">
    <div class="card-header bg-success text-white fw-bold">
        <i class="fa-solid fa-calendar-plus"></i> Book a Viewing
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <input type="hidden" name="roomId" value="@ViewBag.RoomId" />
            <div class="mb-3">
                <label class="form-label">Appointment Time</label>
                <input type="datetime-local" name="appointmentTime" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success w-100">Book</button>
        </form>
    </div>
</div>
<div class="d-flex gap-2 justify-content-center">
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
    <a href="@Url.Action("Index")" class="btn btn-outline-success"><i class="fa-solid fa-list"></i> Back to Appointments</a>
</div>
