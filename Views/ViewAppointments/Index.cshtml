@model IEnumerable<RentalService.Models.ViewAppointment>
@{
    ViewData["Title"] = "Lịch hẹn xem phòng của tôi";
    var status = ViewBag.Status as string ?? "";
    var sort = ViewBag.Sort as string ?? "";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-success mb-0"><i class="fa-solid fa-calendar-check me-2"></i>Lịch hẹn xem phòng của tôi</h2>
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-2"><i class="fa-solid fa-gauge-high"></i> Bảng điều khiển</a>
        <a href="@Url.Action("Index", "Rooms")" class="btn btn-outline-primary"><i class="fa-solid fa-magnifying-glass"></i> Tìm phòng</a>
    </div>
</div>
<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <select name="status" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">Tất cả trạng thái</option>
            @foreach (var st in Enum.GetNames(typeof(RentalService.Models.ViewAppointmentStatus)))
            {
                <option value="@st" selected="@(status == st ? "selected" : null)">@st</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <select name="sort" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(sort) ? "selected" : null)">Mới nhất</option>
            <option value="date_asc" selected="@(sort == "date_asc" ? "selected" : null)">Thời gian tăng dần</option>
            <option value="date_desc" selected="@(sort == "date_desc" ? "selected" : null)">Thời gian giảm dần</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Lọc</button>
    </div>
</form>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Phòng</th>
                    <th>Thời gian</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>
                        @if (appt.Room != null)
                        {
                            <a href="@Url.Action("Details", "Rooms", new { id = appt.Room.Id })" target="_blank">@appt.Room.Name</a>
                        }
                        else
                        {
                            <span>Unknown</span>
                        }
                    </td>
                    <td>@appt.AppointmentTime</td>
                    <td>
                        @if (appt.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning">Pending</span>
                            <a href="@Url.Action("Details", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Details</a>
                        }
                        else if (appt.Status.ToString() == "Confirmed")
                        {
                            <span class="badge bg-success">Confirmed</span>
                            <a href="@Url.Action("Details", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Details</a>
                        }
                        else if (appt.Status.ToString() == "Cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>
                            <a href="@Url.Action("Details", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Details</a>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@appt.Status</span>
                            <a href="@Url.Action("Details", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Details</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
