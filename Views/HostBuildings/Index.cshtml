@model IEnumerable<RentalService.Models.Building>
@{
    ViewData["Title"] = "Tòa nhà của tôi";
    var error = ViewBag.Error as string;
    var search = ViewBag.Search as string ?? "";
    var sort = ViewBag.Sort as string ?? "";
}
<div class="container mt-4">
    <h2>Tòa nhà của tôi</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <form method="get" class="row g-2 align-items-end mb-3">
        <div class="col-auto">
            <input type="text" name="search" class="form-control" placeholder="Tìm theo tên..." value="@search" />
        </div>
        <div class="col-auto">
            <select name="sort" class="form-select">
                <option value="" selected="@(string.IsNullOrEmpty(sort) ? "selected" : null)">Mặc định (Ngày tạo tăng dần)</option>
                <option value="created_desc" selected="@(sort == "created_desc" ? "selected" : null)">Ngày tạo mới nhất</option>
                <option value="name_asc" selected="@(sort == "name_asc" ? "selected" : null)">Tên A-Z</option>
                <option value="name_desc" selected="@(sort == "name_desc" ? "selected" : null)">Tên Z-A</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">Lọc</button>
        </div>
        <div class="col-auto ms-auto">
            <a href="@Url.Action("Create")" class="btn btn-success">Thêm tòa nhà mới</a>
        </div>
    </form>
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Tên</th>
                <th>Địa chỉ</th>
                <th>Mô tả</th>
                <th>Số phòng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <td>@building.Name</td>
                <td>@building.Address</td>
                <td>@building.Description</td>
                <td>@(building.Rooms?.Count ?? 0)</td>
                <td>
                    <a href="@Url.Action("Details", new { id = building.Id })" class="btn btn-outline-info">Chi tiết</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="@Url.Action("Index", "HostDashboard")" class="btn btn-outline-secondary mt-2">Quay lại bảng điều khiển</a>
</div>
