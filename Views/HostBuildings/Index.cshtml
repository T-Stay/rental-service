@model IEnumerable<RentalService.Models.Building>
@{
    ViewData["Title"] = "Tòa nhà của tôi";
    var error = ViewBag.Error as string;
}
<div class="container mt-4">
    <h2>Tòa nhà của tôi</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Thêm tòa nhà mới</a>
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Tên</th>
                <th>Địa chỉ</th>
                <th>Mô tả</th>
                <th>Số phòng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <td>@building.Name</td>
                <td>@building.Address</td>
                <td>@building.Description</td>
                <td>@(building.Rooms?.Count ?? 0)</td>
                <td>
                    <a href="@Url.Action("Details", new { id = building.Id })" class="btn btn-info btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="@Url.Action("Index", "HostDashboard")" class="btn btn-outline-secondary mt-2">Quay lại bảng điều khiển</a>
</div>
