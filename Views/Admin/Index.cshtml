@model IEnumerable<RentalService.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
}
<h2>Quản lý người dùng</h2>
<table class="table">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Vai trò</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
        </tr>
    }
    </tbody>
</table>
<div class="mt-4 mb-4 d-flex flex-wrap gap-2">
    <a href="@Url.Action("Create", "HostBuildings")" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i> Thêm tòa nhà mới</a>
    <a href="@Url.Action("Create", "HostRooms")" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i> Đăng phòng mới</a>
    <a href="@Url.Action("Create", "HostAdPosts")" class="btn btn-primary"><i class="fa-solid fa-bullhorn me-1"></i> Đăng quảng cáo mới</a>
    <a href="@Url.Action("AdPostsToApprove", "Admin")" class="btn btn-warning"><i class="fa-solid fa-bullhorn me-1"></i> Duyệt bài quảng cáo</a>
</div>
