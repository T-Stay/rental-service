@model IEnumerable<RentalService.Models.Room>
@{
    ViewData["Title"] = "Rooms Pending Approval";
}
<h2>Rooms Pending Approval</h2>
<div class="row g-4">
@foreach (var room in Model)
{
    <div class="col-12 col-md-6 col-lg-4">
        <div class="room-card h-100">
            @if (room.Images != null && room.Images.Count > 0 && !string.IsNullOrEmpty(room.Images[0].ImageUrl))
            {
                <img src="@room.Images[0].ImageUrl" alt="Room Image" class="room-card-img" />
            }
            else
            {
                <img src="/images/no-image.png" alt="No Image" class="room-card-img" />
            }
            <div class="room-card-body">
                <div class="room-card-title">@room.Name</div>
                <div class="room-card-location"><i class="fa-solid fa-building"></i> @room.Building?.Name</div>
                <div class="room-card-price">@room.Price.ToString("C0")</div>
                <div class="room-card-status mb-2"><span class="badge bg-secondary">@room.Status</span></div>
                <div class="mb-2">@room.Description</div>
                <div class="room-card-link d-flex gap-1 flex-wrap">
                    <form asp-action="ApproveRoom" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@room.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form asp-action="RejectRoom" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@room.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
</div>
<a href="@Url.Action("Index")">Back to Admin Home</a>
