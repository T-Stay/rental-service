<script>
function showQr(pkg) {
    let name = pkg === 'dong' ? 'Đồng' : (pkg === 'bac' ? 'Bạc' : (pkg === 'vang' ? 'Vàng' : 'Kim Cương'));
    let qrImg = pkg === 'dong' ? '/images/qr1.png' : (pkg === 'bac' ? '/images/qr2.png' : (pkg === 'vang' ? '/images/qr3.png' : '/images/qr4.png'));
    document.getElementById('qrSection').style.display = 'block';
    let nameSpan = document.getElementById('qrPackageName');
    nameSpan.innerText = name;
    // Đặt màu sắc nổi bật cho từng gói
    nameSpan.className = 'fw-bold px-2 py-1 rounded';
    if(pkg === 'dong') {
        nameSpan.style.background = '#0d6efd'; // primary
        nameSpan.style.color = '#fff';
    } else if(pkg === 'bac') {
        nameSpan.style.background = '#6c757d'; // secondary
        nameSpan.style.color = '#fff';
    } else if(pkg === 'vang') {
        nameSpan.style.background = '#ffc107'; // warning
        nameSpan.style.color = '#212529'; // text-dark
    } else if(pkg === 'kimcuong') {
        nameSpan.style.background = '#0dcaf0'; // info
        nameSpan.style.color = '#fff';
    }
    document.querySelector('#qrSection img').src = qrImg;
}
// Tự động mở modal mua gói nếu có query ?buyPackage=1
(function() {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('buyPackage') === '1') {
        setTimeout(function() {
            var modal = new bootstrap.Modal(document.getElementById('buyPackageModal'));
            modal.show();
        }, 300);
    }
})();
</script>
