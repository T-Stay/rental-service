@model RentalService.Models.User
@{
    ViewData["Title"] = "My Profile";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text);
        toastr.success('Copied to clipboard!');
    }
</script>
<style>
    .profile-img-placeholder {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #adb5bd;
        margin-bottom: 1rem;
        position: relative;
    }
    .copy-btn {
        border: none;
        background: none;
        color: #007bff;
        cursor: pointer;
        margin-left: 0.5rem;
    }
</style>
<div class="container mt-4">
    <h2>My Profile</h2>
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <div class="profile-img-placeholder me-3" style="cursor:pointer;" title="Change profile image">
                    <i class="fa fa-user"></i>
                </div>
                <div>
                    <h4 class="mb-1">@Model.Name</h4>
                    <div class="text-muted">@Model.Role</div>
                </div>
            </div>
            <p><strong>Email (login):</strong> @Model.Email</p>
            <p><strong>Contact Information:</strong></p>
            <ul class="list-group mb-3">
                @if (Model.ContactInformations != null && Model.ContactInformations.Count > 0)
                {
                    foreach (var c in Model.ContactInformations)
                    {
                        @:<li class="list-group-item d-flex align-items-center justify-content-between">
                        @:    <span>
                        @:        <strong>@c.Type:</strong>
                        if (c.Type.ToString() == "FacebookLink")
                        {
                            @:<span>
                            @:    <a href="@c.Data" target="_blank" rel="noopener">
                            @:        <i class="fab fa-facebook fa-lg me-1"></i>View Profile
                            @:    </a>
                            @:</span>
                        }
                        else if (c.Type.ToString() == "Email")
                        {
                            @:<span>@c.Data
                            @:    <button class="copy-btn" onclick="copyToClipboard('@c.Data')" title="Copy email"><i class="fa fa-copy"></i></button>
                            @:</span>
                        }
                        else if (c.Type.ToString() == "PhoneNumber")
                        {
                            @:<span>@c.Data
                            @:    <button class="copy-btn" onclick="copyToClipboard('@c.Data')" title="Copy phone"><i class="fa fa-copy"></i></button>
                            @:</span>
                        }
                        else
                        {
                            @:<span>@c.Data</span>
                        }
                        @:    </span>
                        @:    <form asp-action="DeleteContact" method="post" style="display:inline">
                        @:        <input type="hidden" name="id" value="@c.Id" />
                        @:        <button type="submit" class="btn btn-sm btn-danger ms-2">Delete</button>
                        @:    </form>
                        @:</li>
                    }
                }
                else
                {
                    <li class="list-group-item">No contact information added.</li>
                }
            </ul>
            <button class="btn btn-outline-primary mb-2" type="button" onclick="document.getElementById('addContactForm').style.display='flex'">Add Contact</button>
            <form id="addContactForm" asp-action="AddContact" method="post" class="mt-3 row g-2 align-items-end" style="display:none;">
                <div class="col-auto">
                    <label class="form-label mb-0">Type:</label>
                    <select name="type" class="form-select">
                        <option value="Email">Email</option>
                        <option value="PhoneNumber">Phone Number</option>
                        <option value="FacebookLink">Facebook Link</option>
                    </select>
                </div>
                <div class="col-auto">
                    <label class="form-label mb-0">Data:</label>
                    <input name="data" class="form-control" required />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">Add</button>
                    <button type="button" class="btn btn-secondary ms-2" onclick="document.getElementById('addContactForm').style.display='none'">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
