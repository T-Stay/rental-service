@model RentalService.Models.Room
@{
    ViewData["Title"] = "Đăng phòng mới";
    var buildings = ViewBag.Buildings as List<RentalService.Models.Building>;
    var selectedBuildingId = ViewBag.SelectedBuildingId as Guid?;
    var error = ViewBag.Error as string;
}
<div class="container mt-4">
    <h2 class="mb-4">Đăng phòng mới</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-4">
        <div class="col-md-7 col-lg-6 mx-auto">
            <!-- Toggle thêm phòng nhanh -->
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="quickAddToggle" name="QuickAdd" onchange="toggleQuickAddFields()">
                <label class="form-check-label" for="quickAddToggle">Thêm phòng nhanh</label>
            </div>
            <!-- Các trường cho thêm phòng nhanh -->
            <div id="quickAddFields" style="display:none;">
                <div class="mb-3">
                    <label class="form-label">Số lượng phòng</label>
                    <input type="number" class="form-control" name="QuickAddCount" min="2" max="50" value="2" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Định dạng tên phòng</label>
                    <input type="text" class="form-control" name="QuickAddNameFormat" value="Phòng A{0}" placeholder="Ví dụ: Phòng A{0}" />
                    <div class="form-text">Dùng <b>{0}</b> để đánh số tự động, ví dụ: Phòng A1, Phòng A2...</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Số bắt đầu</label>
                    <input type="number" class="form-control" name="QuickAddStart" value="1" min="1" />
                </div>
            </div>
            <script>
                function toggleQuickAddFields() {
                    var checked = document.getElementById('quickAddToggle').checked;
                    document.getElementById('quickAddFields').style.display = checked ? '' : 'none';
                }
            </script>
            <div class="mb-3">
                <label class="form-label">Tòa nhà</label>
                <select asp-for="BuildingId" class="form-select">
                    <option value="">Chọn tòa nhà</option>
                    @if (buildings != null)
                    {
                        foreach (var b in buildings)
                        {
                            <option value="@b.Id" selected="@(selectedBuildingId == b.Id ? "selected" : null)">@b.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3" id="roomNameField">
                <label asp-for="Name" class="form-label">Tên phòng</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả phòng"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Giá (VND)</label>
                <input asp-for="Price" type="number" class="form-control" placeholder="0" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("_AmenitiesPartial", ViewBag.AllAmenities as List<RentalService.Models.Amenity>)
            @await Html.PartialAsync("_RoomImagesPartial", (Model.Images ?? new List<RentalService.Models.RoomImage>()))
            <div class="d-flex align-items-center mt-4">
                <button type="submit" class="btn btn-success me-2">Tạo</button>
                <a href="@Url.Action("Index", new { buildingId = selectedBuildingId })" class="btn btn-outline-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .container form {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px #e9ecef;
        padding: 2.5rem 2rem 2rem 2rem;
    }
    .form-label {
        font-weight: 500;
    }
</style>
<script>
    // Ẩn trường tên phòng khi bật thêm phòng nhanh
    document.getElementById('quickAddToggle').addEventListener('change', function() {
        document.getElementById('roomNameField').style.display = this.checked ? 'none' : '';
    });
    // Nếu reload lại form với toggle đã bật thì cũng ẩn luôn
    if (document.getElementById('quickAddToggle').checked) {
        document.getElementById('roomNameField').style.display = 'none';
    }
</script>
