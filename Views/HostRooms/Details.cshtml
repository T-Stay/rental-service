@model RentalService.Models.Room
@using System.Linq;
@{
    ViewData["Title"] = "Chi tiết phòng";
    var avgRating = Model.Reviews != null && Model.Reviews.Any() ? Model.Reviews.Average(r => r.Rating) : 0;
    var reviewCount = Model.Reviews?.Count ?? 0;
}
<div class="container mt-4">
    <div class="row g-4">
        <div class="col-md-7 order-2 order-md-1">
            <div class="d-flex align-items-center mb-2">
                <h2 class="fw-bold mb-0 me-2">@Model.Name</h2>
            </div>
            <div class="mb-2 text-muted"><i class="fa-solid fa-location-dot"></i> @Model.Building?.Location</div>
            <div class="mb-2 fs-5 fw-bold text-success">@Model.Price.ToString("N0") </div>
            <div class="mb-3">@Model.Description</div>
            @if (Model.Amenities != null && Model.Amenities.Count > 0)
            {
                <div class="mb-3"><strong>Tiện nghi:</strong> @string.Join(", ", Model.Amenities.Select(a => a.Name))</div>
            }
            <div class="d-flex flex-wrap gap-2 mb-3 mt-3">
                <a href="@Url.Action("Index", "HostRooms", new { buildingId = Model.BuildingId })"
                    class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại danh sách</a>
                <a href="@Url.Action("Edit", "HostRooms", new { id = Model.Id })" class="btn btn-warning"><i
                        class="fa-solid fa-pen-to-square"></i> Chỉnh sửa</a>
                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger"><i
                        class="fa-solid fa-trash"></i>Xóa</a>
            </div>
            <hr class="my-4" />
            @* Optionally, add reviews or other host-specific info here *@
        </div>
        <div class="col-md-5 order-1 order-md-2">
            <div class="room-gallery">
                @if (Model.RoomImages != null && Model.RoomImages.Count > 0)
                {
                    <div id="mainRoomImage" class="mb-2">
                        <img src="@Model.RoomImages[0].ImageUrl" class="img-fluid rounded shadow-sm"
                            style="max-height:340px;object-fit:cover;width:100%;" alt="Room Image"
                            onerror="this.onerror=null;this.src='/images/no-image.png';" />
                    </div>
                    <div class="d-flex flex-row flex-wrap gap-2">
                        @for (int i = 0; i < Model.RoomImages.Count; i++)
                        {
                            <img src="@Model.RoomImages[i].ImageUrl" class="img-thumbnail room-thumb"
                                style="width:70px;height:70px;object-fit:cover;cursor:pointer;@(i == 0 ? "border:2px solid #007bff;" : "")"
                                onclick="showRoomImage('@Model.RoomImages[i].ImageUrl', this)" alt="Room Thumbnail"
                                onerror="this.onerror=null;this.src='/images/no-image.png';" />
                        }
                    </div>
                }
                else if (Model.Images != null && Model.Images.Count > 0)
                {
                    <div id="mainRoomImage" class="mb-2">
                        <img src="@Model.Images[0].ImageUrl" class="img-fluid rounded shadow-sm"
                            style="max-height:340px;object-fit:cover;width:100%;" alt="Room Image"
                            onerror="this.onerror=null;this.src='/images/no-image.png';" />
                    </div>
                    <div class="d-flex flex-row flex-wrap gap-2">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <img src="@Model.Images[i].ImageUrl" class="img-thumbnail room-thumb"
                                style="width:70px;height:70px;object-fit:cover;cursor:pointer;@(i == 0 ? "border:2px solid #007bff;" : "")"
                                onclick="showRoomImage('@Model.Images[i].ImageUrl', this)" alt="Room Thumbnail"
                                onerror="this.onerror=null;this.src='/images/no-image.png';" />
                        }
                    </div>
                }
                else
                {
                    <img src="/images/no-image.png" class="img-fluid rounded shadow-sm"
                        style="max-height:340px;object-fit:cover;width:100%;" alt="No Image" />
                }
            </div>
        </div>
    </div>
</div>
<script>
    function showRoomImage(url, thumb) {
        document.getElementById('mainRoomImage').innerHTML = `<img src="${url}" class='img-fluid rounded shadow-sm' style='max-height:340px;object-fit:cover;width:100%;' alt='Room Image' />`;
        document.querySelectorAll('.room-thumb').forEach(t => t.style.border = '');
        thumb.style.border = '2px solid #007bff';
    }
</script>
<style>
    .room-gallery img {
        transition: border 0.2s;
    }

    .room-thumb:hover {
        border: 2px solid #198754 !important;
    }
</style>
