@model RentalService.Models.Room
@{
    ViewData["Title"] = "Chỉnh sửa phòng";
    var buildings = ViewBag.Buildings as List<RentalService.Models.Building>;
    var selectedBuildingId = ViewBag.SelectedBuildingId as Guid?;
    var error = ViewBag.Error as string;
}
<div class="container mt-4">
    <h2 class="mb-4">Chỉnh sửa phòng</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-4">
        <input type="hidden" asp-for="Id" />
        <div class="col-md-7 col-lg-6 mx-auto">
            <div class="mb-3">
                <label class="form-label">Tòa nhà</label>
                <select asp-for="BuildingId" class="form-select">
                    <option value="">Chọn tòa nhà</option>
                    @if (buildings != null)
                    {
                        foreach (var b in buildings)
                        {
                            <option value="@b.Id" selected="@(selectedBuildingId == b.Id ? "selected" : null)">@b.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên phòng</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả phòng"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Giá (VND)</label>
                <input asp-for="Price" type="number" class="form-control" placeholder="0" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Area" class="form-label">Diện tích (m²)</label>
                <input asp-for="Area" type="number" step="0.1" min="0" class="form-control" placeholder="Nhập diện tích phòng" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("_AmenitiesPartial", ViewBag.AllAmenities as List<RentalService.Models.Amenity>)
            @await Html.PartialAsync("_RoomImagesPartial", (Model.RoomImages ?? new List<RentalService.Models.RoomImage>()))
            <div class="mb-3">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Đang hoạt động</option>
                    <option value="Inactive">Không hoạt động</option>
                    <option value="Hidden">Ẩn</option>
                </select>
            </div>
            <div class="d-flex align-items-center mt-4">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Quay lại danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .container form {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px #e9ecef;
        padding: 2.5rem 2rem 2rem 2rem;
    }
    .form-label {
        font-weight: 500;
    }
</style>
