@model RentalService.Models.Room
@{
    ViewData["Title"] = "Edit Room";
    var buildings = ViewBag.Buildings as List<RentalService.Models.Building>;
    var selectedBuildingId = ViewBag.SelectedBuildingId as Guid?;
    var error = ViewBag.Error as string;
}
<div class="container mt-4">
    <h2 class="mb-4">Edit Room</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-4">
        <input type="hidden" asp-for="Id" />
        <div class="col-md-7 col-lg-6 mx-auto">
            <div class="mb-3">
                <label class="form-label">Building</label>
                <select asp-for="BuildingId" class="form-select">
                    <option value="">Select Building</option>
                    @if (buildings != null)
                    {
                        foreach (var b in buildings)
                        {
                            <option value="@b.Id" selected="@(selectedBuildingId == b.Id ? "selected" : null)">@b.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Room Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter room name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the room"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price (VND)</label>
                <input asp-for="Price" type="number" class="form-control" placeholder="0" step="1" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("_AmenitiesPartial", ViewBag.AllAmenities as List<RentalService.Models.Amenity>)
            @await Html.PartialAsync("_RoomImagesPartial", (Model.RoomImages ?? new List<RentalService.Models.RoomImage>()))
            <div class="mb-3">
                <label class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Hidden">Hidden</option>
                </select>
            </div>
            <div class="d-flex align-items-center mt-4">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a href="@Url.Action("Index", new { buildingId = selectedBuildingId })" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .container form {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px #e9ecef;
        padding: 2.5rem 2rem 2rem 2rem;
    }
    .form-label {
        font-weight: 500;
    }
</style>
