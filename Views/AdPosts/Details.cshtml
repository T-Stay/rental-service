@model RentalService.Models.AdPost
@{
    ViewData["Title"] = Model.Title;
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <span class="badge bg-primary">@Model.Badge</span>
            <span class="badge bg-info">@Model.PackageType</span>
            <span class="badge bg-secondary">Ưu tiên: @Model.PriorityOrder</span>
            <div class="mt-3 mb-3">
                <strong>Nội dung:</strong>
                <p>@Model.Content</p>
            </div>
            <div class="mb-3">
                <strong>Hình ảnh:</strong>
                @if (!string.IsNullOrEmpty(Model.ImageUrls))
                {
                    var images = Model.ImageUrls.Split(',');
                    foreach (var img in images)
                    {
                        <img src="@img" class="img-thumbnail me-2 mb-2" style="max-width:160px;" />
                    }
                }
            </div>
            <div class="mb-3">
                <strong>Phòng quảng cáo:</strong>
                @if (Model.Rooms != null && Model.Rooms.Any())
                {
                    foreach (var room in Model.Rooms)
                    {
                        <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" class="badge bg-success me-1" style="text-decoration:none;">
                            @room.Name
                        </a>
                        <!-- TODO: Hiển thị trạng thái phòng, badge nếu cần -->
                    }
                }
                <!-- TODO: Thêm nút liên hệ chủ trọ, đặt lịch xem phòng nếu cần -->
            </div>
            <div class="mb-3">
                <i class="fa fa-eye"></i> @Model.ViewCount lượt xem
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <div><b>Gói dịch vụ:</b> @Model.PackageType</div>
                <div><b>Ngày tạo:</b> @Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                <div><b>Trạng thái:</b> @(Model.IsActive ? "Đang hiển thị" : "Ẩn")</div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-info mt-4"><i class="fa fa-arrow-left"></i> Quay lại trang chủ</a>
</div>
