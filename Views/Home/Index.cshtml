                {
                    var ad = bacAds[j];
                    var images = !string.IsNullOrEmpty(ad.ImageUrls) ? ad.ImageUrls.Split(',') : new string[0];
                    var activeRooms = ad.Rooms?.Where(r => r.Status == RentalService.Models.RoomStatus.Active).ToList() ?? new List<RentalService.Models.Room>();
                    var minPrice = activeRooms.Any() ? activeRooms.Min(r => r.Price) : 0;
                    var maxPrice = activeRooms.Any() ? activeRooms.Max(r => r.Price) : 0;
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Details", "AdPosts", new { id = ad.Id })" class="ad-card-link">
                            <div class="card silver-ad-card position-relative">
                                <div class="silver-img-wrap">
                                    @if (images.Length > 0 && !string.IsNullOrEmpty(images[0]))
                                    {
                                        <img src="@images[0]" class="silver-img-demo img-fluid" alt="Ad Image" onerror="this.onerror=null;this.src='/images/no-image.png';" />
                                    }
                                    else
                                    {
                                        <img src="/images/no-image.png" class="silver-img-demo img-fluid" alt="No Image" />
                                    }
                                </div>
                                <div class="ad-meta-below-img px-2 py-1">
                                    <span class="me-2"><i class="fa fa-eye me-1"></i>@ad.ViewCount</span>
                                    <span><i class="fa fa-door-open me-1"></i>@activeRooms.Count</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="mb-2">@ad.Title</h6>
                                    <span class="badge bg-secondary me-2">Bạc</span>
                                    <span class="badge bg-primary me-2">@ad.Badge</span>
                                    <div class="mb-2">
                                        @if (minPrice > 0 && maxPrice > 0)
                                        {
                                            <span class="text-success fw-bold">@minPrice.ToString("N0")@(minPrice != maxPrice ? $" - {maxPrice.ToString("N0")}" : "") đ</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Liên hệ giá</span>
                                        }
                                    </div>
