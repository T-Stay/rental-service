@model IEnumerable<RentalService.Models.AdPost>
@{
    ViewData["Title"] = "Trang Chủ";
    var isCustomer = User?.Identity != null && User.Identity.IsAuthenticated && (User.FindFirst("role")?.Value == "customer");
}
<!-- TODO: Filter/sort quảng cáo theo gói, badge, ưu tiên, v.v. -->
<div class="container mt-4">
    <h2 class="mb-4">Bài quảng cáo nổi bật</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var ad in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@ad.Title</h5>
                            <span class="badge bg-primary">@ad.Badge</span>
                            <span class="badge bg-info">@ad.PackageType</span>
                            <span class="badge bg-secondary">Ưu tiên: @ad.PriorityOrder</span>
                            <p class="mt-2">@ad.Content?.Substring(0, Math.Min(ad.Content.Length, 80))...</p>
                            <a href="@Url.Action("Details", "AdPosts", new { id = ad.Id })" class="btn btn-outline-success btn-sm">Xem chi tiết</a>
                        </div>
                        @if (!string.IsNullOrEmpty(ad.ImageUrls))
                        {
                            var img = ad.ImageUrls.Split(',').FirstOrDefault();
                            if (!string.IsNullOrEmpty(img))
                            {
                                <img src="@img" class="card-img-bottom" style="max-height:180px;object-fit:cover;" />
                            }
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">Chưa có bài quảng cáo nào.</div>
        }
    </div>
    <!-- TODO: Thêm filter/sort UI, phân trang nếu cần -->
</div>
