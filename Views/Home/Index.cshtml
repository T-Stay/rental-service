@model IEnumerable<RentalService.Models.AdPost>
@{
    ViewData["Title"] = "Trang Chủ";
    var kimCuongAds = Model?.Where(ad => ad.PackageType == RentalService.Models.AdPackageType.KimCuong).ToList() ?? new List<RentalService.Models.AdPost>();
    var vangAds = Model?.Where(ad => ad.PackageType == RentalService.Models.AdPackageType.Vang).ToList() ?? new List<RentalService.Models.AdPost>();
    var bacAds = Model?.Where(ad => ad.PackageType == RentalService.Models.AdPackageType.Bac).ToList() ?? new List<RentalService.Models.AdPost>();
    var dongAds = Model?.Where(ad => ad.PackageType == RentalService.Models.AdPackageType.Dong || ad.PackageType == RentalService.Models.AdPackageType.Free).ToList() ?? new List<RentalService.Models.AdPost>();
    var search = ViewBag.Search as string;
}
@if (!string.IsNullOrWhiteSpace(search))
{
    <div class="alert alert-info mb-4 d-flex align-items-center justify-content-between flex-wrap">
        <span>Đang lọc các quảng cáo liên quan đến: <b>@search</b></span>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm ms-3 mt-2 mt-md-0">Bỏ lọc</a>
    </div>
}
<div class="container mt-1">
    <!-- Hero Section -->
    @if (string.IsNullOrWhiteSpace(search))
    {
        <div class="homepage-hero mb-5 p-4 rounded-4 shadow-sm bg-hero-light text-primary">
            <div class="row align-items-center g-4">
                <div class="col-12">
                    <h1 class="display-2 fw-bolder mb-3 text-primary text-center text-md-start"><i class="fa fa-home me-2"></i>Trọ Tốt</h1>
                    <p class="lead mb-4 text-secondary fs-3 fw-semibold text-center text-md-start">Nền tảng kết nối thuê & cho thuê phòng trọ, căn hộ, nhà nguyên căn nhanh chóng, uy tín và tiện lợi.</p>
                    <div class="row g-4 justify-content-center justify-content-md-start">
                        <div class="col-12 col-md-4">
                            <div class="cta-box p-5 rounded-4 bg-white border h-100 d-flex flex-column align-items-start">
                                <div class="mb-2 fs-3 fw-bold text-primary"><i class="fa fa-search-location fa-xl text-info me-2"></i>Bạn là khách?</div>
                                <div class="mb-3 fs-5 text-secondary">Khám phá hàng ngàn phòng trọ, căn hộ phù hợp nhu cầu của bạn.</div>
                                <a href="@Url.Action("Index", "AdPosts")" class="btn btn-outline-primary btn-lg w-100 fw-bold py-3 fs-5"><i class="fa fa-search me-1"></i>Tìm phòng ngay</a>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="cta-box p-5 rounded-4 bg-white border h-100 d-flex flex-column align-items-start">
                                <div class="mb-2 fs-3 fw-bold text-success"><i class="fa fa-user-tie fa-xl text-success me-2"></i>Bạn là chủ nhà?</div>
                                <div class="mb-3 fs-5 text-secondary">Đăng phòng cho thuê miễn phí, tiếp cận hàng ngàn khách thuê tiềm năng.</div>
                                <a href="@Url.Action("Create", "AdPosts")" class="btn btn-outline-success btn-lg w-100 fw-bold py-3 fs-5"><i class="fa fa-plus-circle me-1"></i>Đăng tin ngay</a>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="cta-box p-5 rounded-4 bg-white border h-100 d-flex flex-column align-items-start">
                                <div class="mb-2 fs-3 fw-bold text-info"><i class="fa fa-info-circle fa-xl text-info me-2"></i>Bạn muốn biết thêm?</div>
                                <div class="mb-3 fs-5 text-secondary">Tìm hiểu về đội ngũ, sứ mệnh và giá trị của chúng tôi.</div>
                                <a href="@Url.Action("About", "Home")" class="btn btn-outline-info btn-lg w-100 fw-bold py-3 fs-5"><i class="fa fa-arrow-right me-1"></i>Về chúng tôi</a>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-3 flex-wrap mt-4 justify-content-center justify-content-md-start">
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-bolt me-1"></i> Đăng phòng miễn phí</span>
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-check-circle me-1"></i> Tin xác thực</span>
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-users me-1"></i> Hỗ trợ 24/7</span>
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-fire me-1"></i> Ưu đãi hấp dẫn</span>
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-star me-1"></i> Chủ nhà uy tín</span>
                        <span class="badge bg-info bg-opacity-10 text-primary fw-semibold px-4 py-2 fs-6"><i class="fa fa-shield-alt me-1"></i> Bảo mật thông tin</span>
                    </div>
                </div>
            </div>
        </div>
    }
    <h2 class="mb-4">Bài viết đề xuất</h2>
    <!-- Kim cương: mỗi ad 1 row, col-12 -->
    <div class="mb-5">
        @foreach (var ad in kimCuongAds)
        {
            var images = !string.IsNullOrEmpty(ad.ImageUrls) ? ad.ImageUrls.Split(',') : new string[0];
            var activeRooms = ad.Rooms?.Where(r => r.Status == RentalService.Models.RoomStatus.Active).ToList() ?? new List<RentalService.Models.Room>();
            var minPrice = activeRooms.Any() ? activeRooms.Min(r => r.Price) : 0;
            var maxPrice = activeRooms.Any() ? activeRooms.Max(r => r.Price) : 0;
            <div class="row mb-4">
                <div class="col-12">
                    <a href="@Url.Action("Details", "AdPosts", new { id = ad.Id })" class="ad-card-link">
                        <div class="card diamond-ad-card position-relative">
                            <div class="ad-meta-top-left px-3 py-1">
                                <span class="me-3"><i class="fa fa-eye me-1"></i>@ad.ViewCount lượt xem</span>
                                <span><i class="fa fa-door-open me-1"></i>@activeRooms.Count phòng</span>
                            </div>
                            <div class="row g-0">
                                <div class="col-md-7">
                                    <div class="card-body">
                                        <h3 class="mb-2">@ad.Title</h3>
                                        <span class="badge bg-info me-2">Kim cương</span>
                                        <span class="badge bg-primary me-2">@ad.Badge</span>
                                        <div class="mt-2 mb-2">
                                            @if (minPrice > 0 && maxPrice > 0)
                                            {
                                                <span class="text-success fw-bold">@minPrice.ToString("N0")@(minPrice != maxPrice ? $" - {maxPrice.ToString("N0")}" : "") đ</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Liên hệ giá</span>
                                            }
                                        </div>
                                        <!-- Kim cương -->
                                        <div class="mt-2 position-relative">
                                            <div class="ad-content-preview" style="overflow: hidden;">@Html.Raw(ad.Content)</div>
                                            <div class="text-center mt-1">
                                                <button class="btn btn-link btn-sm p-0 ad-see-more-btn" type="button" tabindex="-1">Xem thêm</button>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center w-100 mt-3 pt-2 small text-secondary">
                                            <span class="text-start"><i class="fa fa-calendar-alt me-1"></i>@ad.CreatedAt.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="diamond-img-grid">
                                        @if (images.Length > 0 && !string.IsNullOrEmpty(images[0]))
                                        {
                                            <div class="diamond-img-main">
                                                <img src="@images[0]" class="img-fluid main-img-demo" alt="Ad Image" onerror="this.onerror=null;this.src='/images/no-image.png';" />
                                            </div>
                                            <div class="diamond-img-thumbs mt-2">
                                                @for (int k = 1; k < Math.Min(images.Length, 5); k++)
                                                {
                                                    <div class="diamond-img-thumb">
                                                        <img src="@images[k]" class="img-fluid" alt="Thumb" onerror="this.onerror=null;this.src='/images/no-image.png';" />
                                                        @if (k == 4 && images.Length > 5)
                                                        {
                                                            <div class="diamond-img-more">+@((images.Length-5).ToString())</div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="diamond-img-main">
                                                <img src="/images/no-image.png" class="img-fluid main-img-demo" alt="No Image" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
