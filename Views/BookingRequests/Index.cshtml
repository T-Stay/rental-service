@model IEnumerable<RentalService.Models.BookingRequest>
@{
    ViewData["Title"] = "Yêu cầu đặt phòng của tôi";
    var search = ViewBag.Search as string ?? "";
    var status = ViewBag.Status as string ?? "";
    var sort = ViewBag.Sort as string ?? "";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-info mb-0"><i class="fa-solid fa-envelope-open-text me-2"></i>Yêu cầu đặt phòng của tôi</h2>
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-2"><i class="fa-solid fa-gauge-high"></i> Bảng điều khiển</a>
        <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Tạo yêu cầu mới</a>
    </div>
</div>
<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <input type="text" name="search" class="form-control" placeholder="Tìm phòng..." value="@search" />
    </div>
    <div class="col-auto">
        <select name="status" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">Tất cả trạng thái</option>
            @foreach (var st in Enum.GetNames(typeof(RentalService.Models.BookingRequestStatus)))
            {
                <option value="@st" selected="@(status == st ? "selected" : null)">@st</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <select name="sort" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(sort) ? "selected" : null)">Mới nhất</option>
            <option value="created_asc" selected="@(sort == "created_asc" ? "selected" : null)">Cũ nhất</option>
            <option value="room_asc" selected="@(sort == "room_asc" ? "selected" : null)">Phòng A-Z</option>
            <option value="room_desc" selected="@(sort == "room_desc" ? "selected" : null)">Phòng Z-A</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Lọc</button>
    </div>
</form>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Phòng</th>
                    <th>Tin nhắn</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td>
                        @if (req.Room != null)
                        {
                            <a href="@Url.Action("Details", "Rooms", new { id = req.Room.Id })" target="_blank">@req.Room.Name</a>
                        }
                        else
                        {
                            <span class="text-muted">Không xác định</span>
                        }
                    </td>
                    <td>@req.Message</td>
                    <td>
                        @if (req.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning">Đang chờ</span>
                        }
                        else if (req.Status.ToString() == "Approved")
                        {
                            <span class="badge bg-success">Đã duyệt</span>
                        }
                        else if (req.Status.ToString() == "Rejected")
                        {
                            <span class="badge bg-danger">Từ chối</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@req.Status</span>
                        }
                    </td>
                    <td>@req.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = req.Id })" class="btn btn-sm btn-outline-info">Chi tiết</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
