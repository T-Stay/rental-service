@model IEnumerable<RentalService.Models.BookingRequest>
@{
    ViewData["Title"] = "My Booking Requests";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-info mb-0"><i class="fa-solid fa-envelope-open-text me-2"></i>My Booking Requests</h2>
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-2"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
        <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> New Request</a>
    </div>
</div>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Room</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td>
                        @if (req.Room != null)
                        {
                            <a href="@Url.Action("Details", "Rooms", new { id = req.Room.Id })" target="_blank">@req.Room.Name</a>
                        }
                        else
                        {
                            <span class="text-muted">Unknown</span>
                        }
                    </td>
                    <td>@req.Message</td>
                    <td>
                        @if (req.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                        else if (req.Status.ToString() == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (req.Status.ToString() == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@req.Status</span>
                        }
                    </td>
                    <td>@req.CreatedAt.ToShortDateString()</td>
                    <td><a href="@Url.Action("Details", new { id = req.Id })" class="btn btn-outline-info btn-sm">Details</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
