                        </li>
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var role = User.FindFirst("role")?.Value ?? "user";
                            if (role == "customer")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["controller"]?.ToString() == "BookingRequests" || ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" || (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "CustomerDashboard") ? "active" : "")" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Khách hàng
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "BookingRequests" ? "active" : "")" asp-controller="BookingRequests" asp-action="Index">Đặt phòng</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="ViewAppointments" asp-action="Index">Lịch hẹn</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "CustomerDashboard" ? "active" : "")" asp-controller="Home" asp-action="CustomerDashboard">Bảng điều khiển</a></li>
                                    </ul>
                                </li>
                            }
                            else if (role == "host")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostBuildings" 
                                    || ViewContext.RouteData.Values["controller"]?.ToString() == "HostRooms" 
                                    || ViewContext.RouteData.Values["controller"]?.ToString() == "HostAdPosts"
                                    || (ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" && ViewContext.RouteData.Values["action"]?.ToString() == "HostRoomAppointments") || ViewContext.RouteData.Values["controller"]?.ToString() == "HostDashboard" ? "active" : "")" href="#" id="hostDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Chủ nhà
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostDashboard" ? "active" : "")" asp-controller="HostDashboard" asp-action="Index"><i class="fa-solid fa-gauge-high me-2"></i>Bảng điều khiển</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostBuildings" ? "active" : "")" asp-controller="HostBuildings" asp-action="Index"><i class="fa-solid fa-building me-2"></i>Tòa nhà của tôi</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostRooms" ? "active" : "")" asp-controller="HostRooms" asp-action="Index"><i class="fa-solid fa-door-open me-2"></i>Phòng của tôi</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" && ViewContext.RouteData.Values["action"]?.ToString() == "HostRoomAppointments" ? "active" : "")" asp-controller="ViewAppointments" asp-action="HostRoomAppointments"><i class="fa-solid fa-calendar-check me-2"></i>Lịch xem phòng</a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostAdPosts" ? "active" : "")" asp-controller="HostAdPosts" asp-action="MyAdPosts"><i class="fa-solid fa-bullhorn me-2"></i>Quản lý quảng cáo</a></li>
                                    </ul>
                                </li>
                            }
                            else if (role == "admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-danger @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Quản trị
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item text-danger @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Index">Trang quản trị</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav nav nav-pills ms-auto">
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var role = (User.FindFirst("role")?.Value ?? "user").ToLower();
                            <li class="nav-item dropdown position-relative me-2" id="notificationDropdown">
                                <a class="nav-link position-relative" href="#" id="notificationBell" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-bell fa-lg"></i>
                                    <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.9em; display:none;">0</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notificationBell" style="min-width: 320px; max-width: 400px;">
                                    <li id="notificationList" style="max-height: 350px; overflow-y: auto;">
                                        <div class="text-center p-3 text-muted">Loading...</div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-center" href="@Url.Action("CustomerDashboard", "Home")">Xem tất cả thông báo</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user fa-lg"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li class="dropdown-header"><i class="fa-solid fa-user me-2"></i>@User.Identity.Name</li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Profile")"><i class="fa-solid fa-id-badge me-2"></i>Hồ sơ</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item"><i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Register" ? "active" : "")" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
