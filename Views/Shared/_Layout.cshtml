<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trọ Tốt</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            min-height: 100vh;
        }
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .container.main-content {
            flex: 1 0 auto;
        }
        .main-header-bar {
            background: linear-gradient(90deg, #1b6ec2 0%, #0077cc 100%);
            color: #fff;
            padding: 0.5rem 0;
            margin-bottom: 0;
        }
        .main-header-bar .navbar-brand {
            color: #fff !important;
        }
        .main-header-bar .nav-link.active, .main-header-bar .nav-link[aria-current="page"] {
            background: rgba(255,255,255,0.15);
            border-radius: 0.5rem;
            color: #fff !important;
            font-weight: bold;
        }
        .main-header-bar .nav-link {
            color: #e3e3e3 !important;
            margin-right: 0.5rem;
        }
        .main-header-bar .nav-link:hover {
            color: #fff !important;
        }
        .page-header {
            background: #f8fafc;
            border-bottom: 1px solid #e5e5e5;
            padding: 1.5rem 0 1rem 0;
            margin-bottom: 2rem;
        }
        .footer {
            background: linear-gradient(90deg, #1b6ec2 0%, #0077cc 100%);
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        .footer a, .footer a:visited, .footer a:active {
            color: #e3e3e3 !important;
        }
        .footer a:hover {
            color: #fff !important;
            text-decoration: underline;
        }
        .footer .fw-bold, .footer h5, .footer h6 {
            color: #fff;
        }
        /* Ensure notification text wraps and breaks long words */
        .notification-text {
            word-break: break-word;
            white-space: normal;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg main-header-bar shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house-chimney"></i> Trọ Tốt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav nav nav-pills me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rooms" ? "active" : "")" asp-controller="Rooms" asp-action="Index">Phòng</a>
                        </li>
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var role = User.FindFirst("role")?.Value ?? "user";
                            if (role == "customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "BookingRequests" ? "active" : "")" asp-controller="BookingRequests" asp-action="Index">Đặt phòng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="ViewAppointments" asp-action="Index">Lịch hẹn</a>
                                </li>
                            }
                            else if (role == "host")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostBuildings" ? "active" : "")" asp-controller="HostBuildings" asp-action="Index">Tòa nhà của tôi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostRooms" ? "active" : "")" asp-controller="HostRooms" asp-action="Index">Phòng của tôi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ViewAppointments" && ViewContext.RouteData.Values["action"]?.ToString() == "HostRoomAppointments" ? "active" : "")" asp-controller="ViewAppointments" asp-action="HostRoomAppointments">Lịch xem phòng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "HostDashboard" ? "active" : "")" asp-controller="HostDashboard" asp-action="Index">Bảng điều khiển</a>
                                </li>
                            }
                            else if (role == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Index">Quản trị</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav nav nav-pills ms-auto">
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var role = (User.FindFirst("role")?.Value ?? "user").ToLower();
                            <li class="nav-item dropdown position-relative me-2" id="notificationDropdown">
                                <a class="nav-link position-relative" href="#" id="notificationBell" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-bell fa-lg"></i>
                                    <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.9em; display:none;">0</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notificationBell" style="min-width: 320px; max-width: 400px;">
                                    <li id="notificationList" style="max-height: 350px; overflow-y: auto;">
                                        <div class="text-center p-3 text-muted">Loading...</div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-center" href="@Url.Action("CustomerDashboard", "Home")">Xem tất cả thông báo</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user fa-lg"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li class="dropdown-header"><i class="fa-solid fa-user me-2"></i>@User.Identity.Name</li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Profile")"><i class="fa-solid fa-id-badge me-2"></i>Hồ sơ</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item"><i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Register" ? "active" : "")" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="page-header text-center">
            <h1 class="fw-bold mb-0">@ViewData["Title"]</h1>
        </div>
    </header>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-4 position-relative">
        <div class="container pb-2">
            <div class="row text-center text-md-start align-items-start justify-content-center">
                <div class="col-12 col-md-4 mb-3 mb-md-0 d-flex flex-column align-items-center align-items-md-start">
                    <h5 class="fw-bold mb-2 d-flex align-items-center justify-content-center justify-content-md-start">
                        <i class="fa-solid fa-house-chimney me-2"></i>Trọ Tốt
                    </h5>
                    <div class="mb-1 small"><i class="fa fa-map-marker-alt me-2"></i>Km29 Đại lộ Thăng Long, Thạch Thất, Hà Nội</div>
                    <div class="mb-1 small"><i class="fa fa-phone me-2"></i>0975 907 414</div>
                    <div class="mb-1 small"><i class="fa fa-envelope me-2"></i>support@tstay.vn</div>
                    <div class="mt-2">
                        <a href="#" class="me-2 text-light"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="me-2 text-light"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="me-2 text-light"><i class="fab fa-twitter fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-6 col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-bold">Tài liệu</h6>
                    <ul class="list-unstyled mb-0">
                        <li><a href="#" class="text-decoration-none text-light">Hướng dẫn</a></li>
                        <li><a href="#" class="text-decoration-none text-light">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-bold">Chính sách</h6>
                    <ul class="list-unstyled mb-0">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light">Bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none text-light">Điều khoản</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4 d-flex flex-column align-items-center align-items-md-end mt-3 mt-md-0">
                    <button id="scrollToTopBtn" class="btn btn-outline-light rounded-circle shadow" style="width:44px;height:44px;" title="Lên đầu trang">
                        <i class="fa fa-arrow-up"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="w-100 text-center mt-2 small" style="opacity:0.85;">
            &copy; 2025 - Trọ Tốt
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            var success = '@TempData["ToastSuccess"]';
            var error = '@TempData["ToastError"]';
            var info = '@TempData["ToastInfo"]';
            var warning = '@TempData["ToastWarning"]';
            if (success) toastr.success(success);
            if (error) toastr.error(error);
            if (info) toastr.info(info);
            if (warning) toastr.warning(warning);
        });
    </script>
    <script>
$(function () {
    function loadNotifications(updateList = true) {
        $.get('@Url.Action("GetNotifications", "Profile")', function (data) {
            var list = $('#notificationList');
            var badge = $('#notificationBadge');
            var unread = data.filter(n => !n.isRead);
            badge.text(unread.length).toggle(unread.length > 0);
            if (updateList) {
                if (unread.length > 0) {
                    list.empty();
                    unread.slice(0, 3).forEach(function (n) {
                        var item = `<div class="dropdown-item fw-bold">
                            <div class='notification-text text-wrap text-break'>${n.title}</div>
                            <div class='notification-text small text-muted text-wrap text-break'>${n.message}</div>
                            <div class='small text-muted'>${n.createdAt}</div>
                        </div>`;
                        list.append(item);
                    });
                } else {
                    list.html('<div class="text-center p-3 text-muted">No unread notifications</div>');
                }
            }
        });
    }
    // Load notifications when dropdown is shown
    $('#notificationDropdown').on('show.bs.dropdown', function () {
        loadNotifications(true);
    });
    // Update badge every 60s, but don't update list unless dropdown is open
    setInterval(function() {
        loadNotifications(false);
    }, 60000);
    // Initial badge load
    loadNotifications(false);
});
</script>
    <script>
    // Nút lướt lên đầu trang
    const scrollBtn = document.getElementById('scrollToTopBtn');
    if(scrollBtn){
        scrollBtn.onclick = function() {
            window.scrollTo({top:0, behavior:'smooth'});
        };
        window.addEventListener('scroll', function(){
            if(window.scrollY > 200){
                scrollBtn.style.display = 'block';
            } else {
                scrollBtn.style.display = 'none';
            }
        });
        scrollBtn.style.display = 'none';
    }
</script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_floatingChatbotScript")
</body>
</html>
