@{
    ViewData["Title"] = "Bảng điều khiển chủ nhà";
    var buildings = ViewBag.Buildings as List<RentalService.Models.Building>;
    var rooms = ViewBag.Rooms as List<RentalService.Models.Room>;
    var appointments = ViewBag.Appointments as List<RentalService.Models.ViewAppointment>;
    var bookingRequests = ViewBag.BookingRequests as List<RentalService.Models.BookingRequest>;
    var error = ViewBag.Error as string;
    var notifications = ViewBag.Notifications as List<RentalService.Models.Notification>;
    var unreadNotifications = notifications?.Where(n => !n.IsRead).ToList() ?? new List<RentalService.Models.Notification>();
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<div class="container mt-4">
    <h2 class="mb-4 fw-bold text-primary"><i class="fa-solid fa-gauge-high me-2"></i>Bảng điều khiển chủ nhà</h2>
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <div class="row mb-4 g-4">
        <div class="col-md-3 col-6">
            <div class="card shadow-sm border-0 h-100 bg-light">
                <div class="card-body text-center">
                    <i class="fa-solid fa-building fa-2x text-info mb-2"></i>
                    <h5 class="card-title">Tòa nhà</h5>
                    <p class="display-6 fw-semibold">@(buildings?.Count ?? 0)</p>
                    <a href="@Url.Action("Index", "HostBuildings")" class="btn btn-outline-info btn-sm w-100">Quản lý tòa nhà</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card shadow-sm border-0 h-100 bg-light">
                <div class="card-body text-center">
                    <i class="fa-solid fa-door-open fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Phòng</h5>
                    <p class="display-6 fw-semibold">@(rooms?.Count ?? 0)</p>
                    <a href="@Url.Action("Index", "HostRooms")" class="btn btn-outline-success btn-sm w-100">Quản lý phòng</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card shadow-sm border-0 h-100 bg-light">
                <div class="card-body text-center">
                    <i class="fa-solid fa-calendar-check fa-2x mb-2" style="color: var(--main-blue);"></i>
                    <h5 class="card-title">Lịch hẹn</h5>
                    <p class="display-6 fw-semibold">@(appointments?.Count ?? 0)</p>
                    <a href="@Url.Action("HostRoomAppointments", "ViewAppointments")" class="btn btn-outline-info btn-sm w-100">Xem lịch hẹn</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card shadow-sm border-0 h-100 bg-light">
                <div class="card-body text-center">
                    <i class="fa-solid fa-envelope-open-text fa-2x text-danger mb-2"></i>
                    <h5 class="card-title">Yêu cầu đặt phòng</h5>
                    <p class="display-6 fw-semibold">@(bookingRequests?.Count ?? 0)</p>
                    <a href="@Url.Action("Index", "HostBookingRequests")" class="btn btn-outline-danger btn-sm w-100">Xem yêu cầu</a>
                </div>
            </div>
        </div>
    </div>
    @if (notifications != null && notifications.Count > 0)
    {
        <div class="alert alert-info d-flex align-items-center justify-content-between">
            <div>
                <i class="fa fa-bell me-2"></i>
                <b>Bạn có @unreadNotifications.Count thông báo chưa đọc:</b>
                <ul class="mb-0">
                    @foreach (var n in unreadNotifications.Take(3))
                    {
                        <li><b>@n.Title:</b> @n.Message <span class="text-muted small">(@n.CreatedAt.ToString("g"))</span></li>
                    }
                </ul>
            </div>
            <form method="post" asp-action="MarkNotificationsRead" asp-controller="HostDashboard">
                <button type="submit" class="btn btn-sm btn-outline-primary">Đ đánh dấu tất cả là đã đọc</button>
            </form>
        </div>
    }
    <div class="mt-4 mb-4 d-flex flex-wrap gap-2">
        <a href="@Url.Action("Create", "HostBuildings")" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i> Thêm tòa nhà mới</a>
        <a href="@Url.Action("Create", "HostRooms")" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i> Đăng phòng mới</a>
    </div>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="fa-solid fa-calendar-day me-2"></i>Lịch hẹn gần đây
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Phòng</th>
                                <th>Khách hàng</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (appointments != null && appointments.Count > 0)
                        {
                            foreach (var appt in appointments)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Details", "Rooms", new { id = appt.Room?.Id })" target="_blank">@appt.Room?.Name</a></td>
                                    <td>@appt.User?.Name</td>
                                    <td>@appt.AppointmentTime.ToString("g")</td>
                                    <td>
                                        @if (appt.Status == RentalService.Models.ViewAppointmentStatus.Pending)
                                        {
                                            <span class="badge bg-warning">Đang chờ</span>
                                            <a href="@Url.Action("HostDetails", "ViewAppointments", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Chi tiết</a>
                                        }
                                        else if (appt.Status == RentalService.Models.ViewAppointmentStatus.Confirmed)
                                        {
                                            <span class="badge bg-success">Đã xác nhận</span>
                                            <a href="@Url.Action("HostDetails", "ViewAppointments", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Chi tiết</a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@appt.Status.ToString()</span>
                                            <a href="@Url.Action("HostDetails", "ViewAppointments", new { id = appt.Id })" class="btn btn-outline-info btn-sm ms-2">Chi tiết</a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center text-muted">Không có lịch hẹn gần đây.</td></tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="fa-solid fa-envelope me-2"></i>Các yêu cầu đặt phòng gần đây
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Phòng</th>
                                <th>Thông điệp</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (bookingRequests != null && bookingRequests.Count > 0)
                        {
                            foreach (var req in bookingRequests)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Details", "Rooms", new { id = req.Room?.Id })" target="_blank">@req.Room?.Name</a></td>
                                    <td>@req.Message</td>
                                    <td>
                                        @if (req.Status == RentalService.Models.BookingRequestStatus.Pending)
                                        {
                                            <span class="badge bg-warning">Đang chờ</span>
                                        }
                                        else if (req.Status == RentalService.Models.BookingRequestStatus.Approved)
                                        {
                                            <span class="badge bg-success">Đã chấp nhận</span>
                                        }
                                        else if (req.Status == RentalService.Models.BookingRequestStatus.Rejected)
                                        {
                                            <span class="badge bg-danger">Đã từ chối</span>
                                        }
                                        else if (req.Status == RentalService.Models.BookingRequestStatus.Cancelled)
                                        {
                                            <span class="badge bg-secondary">Đã hủy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@req.Status.ToString()</span>
                                        }
                                    </td>
                                    <td>@req.CreatedAt.ToString("g")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center text-muted">Không có yêu cầu đặt phòng gần đây.</td></tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>
