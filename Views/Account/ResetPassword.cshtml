@model string
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="min-width:350px;">
        <h2 class="mb-3 text-center">Đặt lại mật khẩu</h2>
        <form asp-action="ResetPassword" method="post" novalidate>
            <input type="hidden" name="code" value="@Model" />
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu mới</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" required minlength="6" id="resetPasswordInput" />
                    <button type="button" class="btn btn-outline-secondary" tabindex="-1" id="resetPasswordToggle" onclick="togglePasswordVisibility('resetPasswordInput','resetPasswordToggle')">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đặt lại mật khẩu</button>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Login" class="text-decoration-none">Quay lại đăng nhập</a>
        </div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors)) {
            <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
        }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/show-password.js"></script>
}
