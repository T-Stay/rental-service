@model dynamic
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="min-width:350px;">
        <h2 class="mb-3 text-center">Đăng ký</h2>
        <form asp-action="Register" method="post" novalidate>
            @if (ViewBag.ReturnUrl != null && !string.IsNullOrEmpty(ViewBag.ReturnUrl.ToString()))
            {
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            }
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Họ và tên</label>
                <input name="name" type="text" class="form-control" required minlength="2" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" required minlength="6" id="registerPasswordInput" />
                    <button type="button" class="btn btn-outline-secondary" tabindex="-1" id="registerPasswordToggle" onclick="togglePasswordVisibility('registerPasswordInput','registerPasswordToggle')">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Đăng ký vai trò</label>
                <select name="role" class="form-select" required>
                    <option value="customer">Khách thuê</option>
                    <option value="host">Chủ nhà</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success w-100">Đăng ký</button>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Login" class="text-decoration-none">Quay lại đăng nhập</a>
        </div>
        @if (ViewBag.Message != null) {
            <div class="alert alert-success mt-2">@ViewBag.Message</div>
        }
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors)) {
            <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
        }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/show-password.js"></script>
}
