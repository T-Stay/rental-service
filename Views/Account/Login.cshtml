@model dynamic
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="min-width:350px;">
        <h2 class="mb-3 text-center">Đăng nhập</h2>
        <form asp-action="Login" method="post" novalidate>
            @if (ViewBag.ReturnUrl != null && !string.IsNullOrEmpty(ViewBag.ReturnUrl.ToString()))
            {
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            }
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" required id="loginPasswordInput" />
                    <button type="button" class="btn btn-outline-secondary" tabindex="-1" id="loginPasswordToggle" onclick="togglePasswordVisibility('loginPasswordInput','loginPasswordToggle')">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="ForgotPassword" class="text-decoration-none me-3">Quên mật khẩu?</a>
            <a asp-action="Register" class="text-decoration-none">Đăng ký</a>
        </div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors)) {
            <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
        }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/show-password.js"></script>
}
