@model IEnumerable<RentalService.Models.BookingRequest>
@{
    ViewData["Title"] = "Yêu cầu đặt phòng";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-danger mb-0"><i class="fa-solid fa-envelope-open-text me-2"></i>Yêu cầu đặt phòng</h2>
    <a href="@Url.Action("Index", "HostDashboard")" class="btn btn-outline-secondary"><i class="fa-solid fa-gauge-high"></i> Bảng điều khiển</a>
</div>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Phòng</th>
                    <th>Khách thuê</th>
                    <th>Tin nhắn</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Details", "Rooms", new { id = req.Room?.Id })" target="_blank">@req.Room?.Name</a></td>
                    <td>@req.User?.Name</td>
                    <td>@req.Message</td>
                    <td>
                        @if (req.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning">Đang chờ</span>
                        }
                        else if (req.Status.ToString() == "Approved")
                        {
                            <span class="badge bg-success">Đã duyệt</span>
                        }
                        else if (req.Status.ToString() == "Rejected")
                        {
                            <span class="badge bg-danger">Từ chối</span>
                        }
                        else if (req.Status.ToString() == "Cancelled")
                        {
                            <span class="badge bg-secondary">Đã hủy</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@req.Status</span>
                        }
                    </td>
                    <td>@req.CreatedAt.ToString("g")</td>
                    <td><a href="@Url.Action("Details", new { id = req.Id })" class="btn btn-outline-info btn-sm">Chi tiết</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
